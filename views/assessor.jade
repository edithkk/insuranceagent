nav.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbarCollapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
.container
  .jumbotron
    h1 Adjustor Payment System
    p This system let's you quickly authorize insurance claim payments to indvidual policy holders and automobile repair facilities using Blockchain 
.container
  .row
    .col-sm-8
      #accordion.panel-group
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a#claim-tab(data-toggle='collapse', data-parent='#accordion', href='#claim') Claim Information
          #claim.panel-collapse.collapse.in
            .panel-body
              form
                .form-group
                  label#policy-label(for='policy') Policy Number
                  input#policy.form-control(type='text')
                  label#claim-reason-label(for='reason') Claim Reason
                  input#reason.form-control(type='text', disabled='')
                  label#claim-amount-label(for='amount') Claim Amount
                  input#amount.form-control(type='text', disabled='')
                  label#vehicle-label(for='vehicle') Vehicle
                  input#vehicle.form-control(type='text', disabled='')
                  label#assignment-label(for='assignment') Current Assignment
                  input#assignment.form-control(type='text', disabled='')
                button#submit-policy.btn.btn-default(type='button') Lookup Policy
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a#adjustor-tab(data-toggle='collapse', data-parent='#accordion', href='#adjustor') Adjustor
           #adjustor.panel-collapse.collapse.in
            .panel-body
              form
                .form-group
                  label#adjustor-label(for='adjustor-select') Select Adjustor
                  select#adjustor-select.form-control
                    option Steve
                    option Helena
                button#submit-adjustor.btn.btn-default(type='button') Assign Adjustor
        .panel.panel-default
          .panel-heading
            h4.panel-title
              a#payee-tab(data-toggle='collapse', data-parent='#accordion', href='#payee') Payee
           #payee.panel-collapse.collapse.in
            .panel-body
              form
                .form-group
                  div.form.group
                    label Payee Type
                    .radio
                      label
                        input#optionsRadios1(type="radio", name="optionsRadios", value="policy-holder", checked="")
                        | Policy Holder
                    .radio
                      label
                        input#optionsRadios2(type="radio", name="optionsRadios", value="bank")
                        | Bank
                    .radio
                      label
                        input#optionsRadios2(type="radio", name="optionsRadios", value="repair-facility")
                        | Repair Facility
                  div.form.group  
                    label#payee-label(for='payee-select') Select Payee
                    select#payee-select.form-control
                        option Bank of America
                        option Citibank
                button#submit-payee.btn.btn-default(type='button') Assign Payee
    .col-sm-4
        .panel.panel-default
          .panel-heading
            h4.panel-title Instructions
            .panel-body
             p Steps

